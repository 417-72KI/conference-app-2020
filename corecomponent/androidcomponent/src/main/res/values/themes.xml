<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DroidKaigi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black_alpha_87</item>

        <!-- Window configurations -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
    </style>

    <style name="Theme.DroidKaigi" parent="Base.Theme.DroidKaigi" />

    <style name="Theme.DroidKaigi.Indigo" parent="Theme.DroidKaigi">
        <!-- Colors -->
        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorSecondary">@color/cyan_300</item>
        <item name="colorSecondaryVariant">@color/cyan_300</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.DroidKaigi.Cyan" parent="Theme.DroidKaigi">
        <!-- Colors -->
        <item name="colorPrimary">@color/cyan_300</item>
        <item name="colorPrimaryVariant">@color/cyan_300</item>
        <item name="colorSecondary">@color/indigo_900</item>
        <item name="colorSecondaryVariant">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/black_alpha_87</item>
    </style>

    <style name="ThemeOverlay.DroidKaigi.Indigo" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <!-- Colors -->
        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorSecondary">@color/cyan_300</item>
        <item name="colorSecondaryVariant">@color/cyan_300</item>
    </style>

    <style name="Theme.DroidKaigi.Indigo.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
</resources>
