<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/fragment_sessions_coodinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBrandBackground"
        tools:context="io.github.droidkaigi.confsched2019.session.ui.SessionPagesFragment"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/filter_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="english only(filter test)"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/sessions_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:behavior_hideable="false"
            app:behavior_peekHeight="64dp"
            app:behavior_skipCollapsed="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:layout="@layout/fragment_bottom_sheet_day_sessions"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
